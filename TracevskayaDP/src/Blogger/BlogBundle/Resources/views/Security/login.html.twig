{% extends 'BloggerBlogBundle::layout.html.twig' %}

{% block title %}Вход{% endblock%}

{% block body_content %}
    {% if error %}
        <div class="error">{{ error.message }}</div>
        <hr>
    {% endif %}
    <form action="{{ path('_security_check') }}" method="POST" class="text-right col-lg-4 col-md-offset-3">
        <div class="form-group">
            <label for="username" style="width: 70px;">Логин:</label>
            <input type="text" class=" input-sm" id="username" name="_username" value="{{ last_username }}">
        </div>
        <div class="form-group">
            <label for="password" style="width: 70px;">Пароль:</label>
            <input type="password" class=" input-sm" id="password" name="_password">
        </div>
        <input type="submit" class="btn btn-primary" name="login" value="Войти  " />
    </form>

{% endblock %}